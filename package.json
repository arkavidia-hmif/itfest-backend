{
  "name": "itfest-backend",
  "version": "0.0.1",
  "description": "Sistem backend untuk IT Festival Arkavidia 6.0.",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/faker": "^5.1.4",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mustache": "^4.0.0",
    "@types/node": "^12.7.4",
    "@types/nodemailer": "^6.4.0",
    "@types/readline-sync": "^1.4.3",
    "@types/socket.io": "^2.1.4",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.19.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-validator": "^0.10.0",
    "cors": "^2.8.5",
    "express": "^4.15.4",
    "express-validator": "^6.2.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mustache": "^4.0.0",
    "mysql2": "^1.7.0",
    "nodemailer": "^6.4.2",
    "nodemon": "^2.0.4",
    "pg": "^7.17.1",
    "readline-sync": "^1.4.10",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.4.0",
    "sqlite3": "^4.0.3",
    "typeorm": "0.2.21",
    "typeorm-seeding": "^1.6.1"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "serve": "ts-node -F src/index.ts",
    "watch": "ts-node-dev --no-notify src/index.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "manage": "ts-node src/manage.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "seed": "ts-node ./src/seed/index.ts",
    "reset": "npm run schema:drop && npm run schema:sync && npm run seed",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
  }
}